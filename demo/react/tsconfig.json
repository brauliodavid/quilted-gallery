{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020","DOM","DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "quilted-gallery":        ["../../dist/index.d.ts"],
      "quilted-gallery/react":  ["../../dist/react/index.d.ts"],
      "quilted-gallery/element":["../../dist/element/index.d.ts"]
    }
  },
  "include": ["src"]
}
